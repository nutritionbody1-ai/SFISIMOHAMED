<body>
    <a href="index.html" class="back-link">← Back to Portfolio</a>
    
    <div class="calculator-box">
        <h2>Uncertainty Budget Calculator</h2>
        <p>Calculate Expanded Uncertainty (k=2) for a single measurement process.</p>
        
        <label>Type A Uncertainty (Standard Deviation of Mean):</label>
        <input type="number" id="typeA" placeholder="e.g. 0.05">

        <label>Type B Uncertainty (Instrument Resolution / 2√3):</label>
        <input type="number" id="typeB" placeholder="e.g. 0.02">

        <button onclick="calculate()">Calculate Uncertainty</button>

        <div id="output" class="result"></div>
    </div>

    <script>
        function calculate() {
            let uA = parseFloat(document.getElementById('typeA').value);
            let uB = parseFloat(document.getElementById('typeB').value);
            
            if (isNaN(uA) || isNaN(uB)) {
                alert("Please enter valid numbers");
                return;
            }

            // Calculation: Combined Uncertainty = sqrt(uA^2 + uB^2)
            let uC = Math.sqrt((uA * uA) + (uB * uB));
            // Expanded Uncertainty (k=2 for 95% confidence)
            let U_exp = uC * 2;

            document.getElementById('output').style.display = "block";
            document.getElementById('output').innerHTML = 
                `<strong>Combined Uncertainty (uc):</strong> ${uC.toFixed(4)}<br>` +
                `<strong>Expanded Uncertainty (U, k=2):</strong> ${U_exp.toFixed(4)}`;
        }
    </script>
</body>
